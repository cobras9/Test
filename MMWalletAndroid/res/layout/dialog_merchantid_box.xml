<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@color/APP_MAIN_COLOR">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/margin_between_elements"
        android:background="@drawable/background_send_money_linear">
        <EditText
            android:id="@+id/Dialog_merchantIdBox_EditText_Id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/Dialog_merchantIdBox_TextView_Id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/labelMerchantLogin"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"/>


    </RelativeLayout>
    <Button
        android:id="@+id/Dialog_merchantIdBox_Button_Submit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_between_elements"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/SUBMIT"
        android:textColor="@color/registration_register_button_text_color"
        android:background="@drawable/error_button_background"/>

    <ProgressBar
        android:id="@+id/Dialog_merchantIdBox_Progressbar"
        android:layout_width="@dimen/progressbar_width"
        android:layout_height="@dimen/progressbar_height"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_gravity="center"

        />

</LinearLayout>