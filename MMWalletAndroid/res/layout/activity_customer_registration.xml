<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/customer_creation_background"
    android:id="@+id/Activity_CustomerRegistration_LinearLayout_RootView">

    <android.support.v4.view.ViewPager
        android:id="@+id/Dialog_CustomerRegistration_Pager"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/APP_MAIN_COLOR"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Activity_CustomerRegistration_FirstPage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_shape"/>

        <TextView
            android:id="@+id/Activity_CustomerRegistration_SecondPage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_shape"/>

        <TextView
            android:id="@+id/Activity_CustomerRegistration_ThirdPage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_shape"/>

    </LinearLayout>
    <Button
        android:layout_marginTop="25dp"
        android:layout_marginBottom="@dimen/margin_between_elements"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/BUTTON_TEXT_COLOR"
        android:text="Register"
        android:gravity="center"
        android:id="@+id/Activity_CustomerRegistration_Button_Register"
        android:background="@drawable/error_button_background"/>

    <ProgressBar
        android:id="@+id/Activity_CustomerRegistration_ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/Activity_CustomerRegistration_TextView_ResultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:maxLines="10"
        android:layout_marginBottom="@dimen/margin_between_elements"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="invisible"
        android:textColor="@color/TEXT_NORMAL"/>

</LinearLayout>