<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Transaction: "
            android:textColor="@android:color/black"
            android:id="@+id/textView21" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/TEXT_NORMAL"
            android:id="@+id/Dialog_Exchange_Quotation_TextView_Name" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Amount: "
            android:textColor="@android:color/black"
            android:id="@+id/textView322" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/TEXT_NORMAL"
            android:id="@+id/Dialog_Exchange_Quotation_TextView_Amount" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fees: "
            android:textColor="@android:color/black"
            android:id="@+id/Dialog_Exchange_Quotation_TextView_FeesTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/TEXT_NORMAL"
            android:id="@+id/Dialog_Exchange_Quotation_TextView_Fees" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Dialog_Exchange_Quotation_LinearLayout_TotalAmount"
        android:visibility="gone"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Amount: "
            android:textColor="@android:color/black"
            android:id="@+id/Dialog_Exchange_Quotation_TextView_TotalAmountTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/TEXT_NORMAL"
            android:id="@+id/Dialog_Exchange_Quotation_TextView_TotalAmount" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/Dialog_Exchange_Quotation_Button_Cancel"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/Dialog_Exchange_Quotation_Button_Confirm"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

    </LinearLayout>




</LinearLayout>